@model AbInitio.Web.ViewModels.BeheerViewModel
@{
    ViewBag.Title = "Personen";
}

<h2>Beheer - Ab Initio</h2>
<p>Personen</p>
<div class="row">
    <ul class="nav nav-tabs beheer_tabs">
        <li role="presentation" class="beheertab"><a href="@(Url.Action("Index"))">Stambomen</a></li>
        <li role="presentation" class="beheertab"><a href="@(Url.Action("Personen"))">Personen</a></li>
        <li role="presentation" class="beheertab"><a href="@(Url.Action("Relaties"))">Relaties</a></li>
        <li role="presentation" class="beheertab"><a href="@(Url.Action("Accounts"))">Accounts</a></li>
        <li role="presentation" class="beheertab"><a href="@(Url.Action("Historie"))">Historie</a></li>
    </ul>
    <form action="@Url.Action("Personen", "Beheer")" data-target="#beheertab_personen" class="form-horizontal" role="form">
        <div class="form-group">
            <label class="col-sm-2 control-label" for="namen">Namen</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="namen" id="namen" placeholder="Namen">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <div class="checkbox">
                    <label>
                        <input type="checkbox"> Man
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Submit</button>
            </div>
        </div>
    </form>
    @Html.Partial("_Personen", Model)
</div>
<div class="modal fade" id="confirm-delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form action="@Url.Action("VerwijderPersoon", "Persoon")" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" id="persoonid" name="persoonid" />
                <div class="modal-header">
                    <p>Verwijder persoon</p>
                </div>
                <div class="modal-body">
                    <p>Persoon verwijderen?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Annuleer</button>
                    <input type="submit" class="btn btn-danger" value="Verwijderen" />
                </div>
            </form>
        </div>
    </div>
</div>



