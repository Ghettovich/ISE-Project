@model AbInitio.Web.ViewModels.BeheerViewModel

@{
    ViewBag.Title = "PersoonDetails";
}

<h2>PersoonDetails</h2>

<div>
    <h4>persoon</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Voornaam
        </dt>

        <dd>
            @Model.Persoon.voornaam
        </dd>

        <dt>
            Overige namen
        </dt>

        <dd>
            @Model.Persoon.overigenamen
        </dd>

        <dt>
            Tussenvoegsel
        </dt>

        <dd>
            @Model.Persoon.tussenvoegsel
        </dd>

        <dt>
            Achternaam
        </dt>

        <dd>
            @Model.Persoon.achternaam
        </dd>

        <dt>
            Achtervoegsel
        </dt>

        <dd>
            @Model.Persoon.achtervoegsel
        </dd>

        <dt>
            Geboortenaam
        </dt>
        <dd>
            @Model.Persoon.geboortenaam
        </dd>

        <dt>
            Geslacht
        </dt>

        <dd>
            @(Model.Persoon.geslacht != null ? @Model.Persoon.geslacht : "Onbekend")
        </dd>

        <dt>
            Status
        </dt>

        <dd>
            @Model.Persoon.status
        </dd>

        <dt>
            Geboortedatum
        </dt>

        <dd>
            @Model.Persoon.geboortedatum
        </dd>

        <dt>
            Geboorteprecisie
        </dt>

        <dd>
            @Model.Persoon.geboorteprecisie
        </dd>

        <dt>
            Geboortedatum2
        </dt>

        <dd>
            @Model.Persoon.geboortedatum2
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Persoon.persoonid }) |
    @Html.ActionLink("Back to List", "Personen")
</p>
<div class="row">
    <div class="col-md-2">
        <div class="list-group gebruiker_stambomen">
            @foreach (var item in Model.StamboomLijst)
            {
                <a href="@Url.Action("BeheerStamboom", "Beheer", new  { stamboomid = item.stamboomid })" class="list-group-item active">@item.familienaam</a>
            }
        </div>
    </div>
    <div class="col-md-10">
        <form role="form" class="form-inline">
            <div class="form-group">
                <input type="text" class="form-control" name="zoekterm" id="zoekterm" placeholder="Term"/>
            </div>
            <button type="submit" class="btn btn-default">Zoek</button>
        </form>
    </div>
    @Html.Partial("_RelatiesTotPersoon", Model)

</div>

