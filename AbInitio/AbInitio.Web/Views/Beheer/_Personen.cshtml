@model AbInitio.Web.ViewModels.BeheerViewModel

<div class="beheertab_content">
    <table class="table table-striped">
        <tr>
            <th>
                Voornaam
            </th>
            <th>
                Tussenvoegsel
            </th>
            <th>
                Achternaam
            </th>
            <th>
                Geboortenaam
            </th>
            <th>
                Geslacht
            </th>
            <th>
                Status
            </th>
            <th>
                Geboortedatum
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model.PersoonLijst)
        {
            <tr class="persoon_row" data-href="@Url.Action("PersoonDetails", "Beheer", new { id = item.persoonid })">
                <td>
                    @item.voornaam
                </td>
                <td>
                    @item.tussenvoegsel
                </td>
                <td>
                    @item.achternaam
                </td>
                <td>
                    @item.geboortenaam
                </td>
                <td>
                    @{ 
                        if(@item.geslacht == "M")
                        {
                            <p>Man</p>
                        } else if(@item.geslacht == "V")
                        {
                            <p>Vrouw</p>
                        } else
                        {

                        }
                    }
                </td>
                <td>
                    @{ 
                        if(@item.status == "True")
                        {
                            <p>Levend</p>
                        } else
                        {
                            <p>Overleden</p>
                        }
                    }
                </td>
                <td>
                    @{ 
                        if(@item.geboorteprecisie == "tussen")
                        {
                            <p>@item.geboorteprecisie  @item.geboortedatum en @item.geboortedatum2</p>
                        } else
                        {
                            <p>@item.geboorteprecisie @item.geboortedatum</p>
                        }
                    }
                    
                </td>
                <td class="actions">
                    <a class="wijzig_persoon" href="@(Url.Action("WijzigPersoon", "Persoon", new { persoonid = item.persoonid }))">
                        <span class="glyphicon glyphicon-pencil"></span>
                    </a>
                    <a class="delete_link" href="#" data-href="@(Url.Action("VerwijderPersoon", "Persoon", new { persoonid = item.persoonid }))" data-toggle="modal" data-target="#confirm-delete">
                        <span class="glyphicon glyphicon-remove"></span>
                    </a>
                </td>
            </tr>
        }
    </table>
</div>