@model AbInitio.Web.ViewModels.BeheerViewModel

<div class="beheertab_content">
    <table class="table table-striped">
        <tr>
            <th>
                Voornaam
            </th>
            <th>
                Tussenvoegsel
            </th>
            <th>
                Achternaam
            </th>
            <th>
                Geboortenaam
            </th>
            <th>
                Geslacht
            </th>
            <th>
                Status
            </th>
            <th>
                Geboortedatum
            </th>
            <th>
                Geboorteprecisie
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model.PersoonLijst)
        {
            <tr class="persoon_row" data-href="@Url.Action("PersoonDetails", "Beheer", new { id = item.persoonid })">
                <td>
                    @item.voornaam
                </td>
                <td>
                    @item.tussenvoegsel
                </td>
                <td>
                    @item.achternaam
                </td>
                <td>
                    @item.geboortenaam
                </td>
                <td>
                    @item.geslacht
                </td>
                <td>
                    @item.status
                </td>
                <td>
                    @item.geboortedatum
                </td>
                <td>
                    @item.geboorteprecisie
                </td>
                <td class="actions">
                    <a class="wijzig_persoon" href="@(Url.Action("WijzigPersoon", "Persoon", new { persoonid = item.persoonid }))">
                        <span class="glyphicon glyphicon-pencil"></span>
                    </a>
                    <a class="delete_persoon" href="@(Url.Action("VerwijderPersoon", "Persoon", new { persoonid = item.persoonid }))">
                        <span class="glyphicon glyphicon-remove"></span>
                    </a>
                </td>
            </tr>
        }
    </table>
</div>