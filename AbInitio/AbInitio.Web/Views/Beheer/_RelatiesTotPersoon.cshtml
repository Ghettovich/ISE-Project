@model AbInitio.Web.ViewModels.BeheerViewModel

<div class="beheertab_content">
    <table class="table table-striped">
        <tr>
            <th>
                Naam
            </th>
            <th>
                Relatie type
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model.PersoonLijst)
        {
            <tr>
                <td>
                    @item.GeefVolledigeNaam
                </td>
                <td>
                    @item.RelatieType
                </td>                
                <td class="actions">
                    @using (Html.BeginForm("AanvullendeRelatieInfo", "Beheer", FormMethod.Post, new { @class = "col-md-1", @style = "padding:0px" }))
                    {
                        <span>
                            <button type="submit" class="btn btn-link" style="padding:0px" id="relatieid" name="relatieid" value="@item.RelatieID">
                                <span class="glyphicon glyphicon-book"></span>
                            </button>
                        </span>
                    }
                    @using (Html.BeginForm("GetToevoegenAvr", "Beheer", FormMethod.Post, new { @class = "col-md-1", @style = "padding:0px" }))
                    {
                        <span>
                            <button type="submit" class="btn btn-link" style="padding:0px" id="relatieid" name="relatieid" value="@item.RelatieID">
                                <span class="glyphicon glyphicon-plus"></span>
                            </button>
                        </span>
                    }
                    @using (Html.BeginForm("WijzigRelatie", "Beheer", FormMethod.Get, new { @class = "col-md-1", @style = "padding:0px" }))
                    {
                        <span>
                            <button type="submit" class="btn btn-link" style="padding:0px" id="relatieid" name="relatieid" value="@item.RelatieID">
                                <span class="glyphicon glyphicon-pencil"></span>
                            </button>
                        </span>
                    }
                    <a class="delete_link" id="relatieDelete-@item.RelatieID" href="#" value="@item.RelatieID" data-toggle="modal" data-target="#confirm-delete" onclick="setHiddenField('relatieid-' + @item.RelatieID)">
                        <input type="hidden" id="relatieid-@item.RelatieID" value="@item.RelatieID" />
                        <span class="glyphicon glyphicon-remove"></span>
                    </a>
                </td>
            </tr>
        }
    </table>
</div>
