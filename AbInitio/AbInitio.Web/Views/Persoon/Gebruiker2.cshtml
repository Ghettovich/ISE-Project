@model AbInitio.Web.ViewModels.StamboomViewModel
@{
    ViewBag.Title = "Gebruiker1";
}

<h2>Gebruiker1</h2>
<p>
    Dit zijn de stambomen waarin gebruiker 1 toegang heeft. Er kan op de stambomen namen geklikt worden zodat de personen in de stamboom getoont worden.
    Er kan hier gezocht worden naar personen in stambomen.
</p>

<div class="row">
    <div class="col-md-2">
        <div class="list-group gebruiker_stambomen">
            @foreach (var item in Model.StambomenGebruiker)
            {
                <a href="@Url.Action("Gebruiker1", "Persoon", new  { stamboomid = item.stamboomid })" class="list-group-item active">@item.familienaam</a>
            }
        </div>
    </div>
    <div class="col-md-10">
        <form role="form" class="form-inline">
            <div class="form-group">
                <label class="control-label" for="exampleInputEmail">Zoekterm</label>
                <input type="email" class="form-control" id="" placeholder="...">
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        </form>
    </div>
    <div class="col-md-12 stamboompersonen">
        @Html.Partial("_PersonenInStamboom", Model)
    </div>
</div>
