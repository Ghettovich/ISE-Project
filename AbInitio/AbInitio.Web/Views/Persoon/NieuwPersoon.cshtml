@model AbInitio.Web.Models.PersoonModel

@{
    ViewBag.Title = "Nieuw Persoon";
}

<h2>Nieuw Persoon</h2>

@using (Html.BeginForm("NieuwPersoon", "Persoon", FormMethod.Post))
{

    <div class="form-horizontal">
        <h4>Persoon</h4>
        <hr />

        <div class="form-group">
            @Html.Label("Voornaam", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" class="form-control" name="voornaam" />
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Tussenvoegsel", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" class="form-control" name="tussenvoegsel" />
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Achternaam", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" class="form-control" name="achternaam" />
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Achtervoegsel", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" class="form-control" name="achtervoegsel" />
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Geboortenaam", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" class="form-control" name="geboortenaam" />
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Overige namen", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" class="form-control" name="overigenamen" />
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Geslacht", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <label for="Man">Man</label>
                <input type="radio" class="form-control" name="geslacht" id="Man" value="M" />
                <label for="Vrouw">Vrouw</label>
                <input type="radio" class="form-control" name="geslacht" id="Vrouw" value="V" />
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Status", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("status", Model.statussen, "", new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Geboortedatum", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" class="form-control" name="geboortedatum" />
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Geboorte precisie", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("geboortePrecisie", Model.geboortePrecisies, "", new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("geboortedatum2", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" class="form-control" name="geboortedatum2" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
