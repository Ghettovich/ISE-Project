@model System.Collections.Generic.List<AbInitio.Web.Models.StamboomModel>

@{
    ViewBag.Title = "OverzichtStambomen";
}

<h2>OverzichtStambomen</h2>

@using (Html.BeginForm())
{
    <fieldset>
        <div class="form-group">
            <input type="text" class="form-control" name="familieNaam" id="familieNaam" placeholder="Familinaam" />
        </div>
        <button type="submit" class="btn btn-default">Zoek</button>

    </fieldset>
}

<table class="table table-striped">
    <br />
    <tr>
        <th>
            Id stamboom
        </th>
        <th>
            familienaam
        </th>
    </tr>
    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.stamboomId
                </td>
                <td>
                    @Html.ActionLink(item.familieNaam, "Stamboom", new { stamboomId = item.stamboomId} )
                </td>
            </tr>
        }
    }
</table>
