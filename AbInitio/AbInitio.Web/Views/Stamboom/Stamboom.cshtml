@model AbInitio.Web.ViewModels.StamboomViewModel

@{
    ViewBag.Title = "Stamboom";
}


<h1> Familie : @Model.stamboom.familienaam</h1>

<table class="table table-striped">
    <tr>
        <th>
            Kekule Nummer
        </th>
        <th>
            Voornaam
        </th>
        <th>
            Tussenvoegsel
        </th>
        <th>
            Achternaam
        </th>
        <th>
            Geboortedatum
        </th>
        <th>
            Trouwdatum
        </th>
        <th>
            Overlijdingsdatum
        </th>
    </tr>
    @foreach (var item in Model.personen)
    {
        <tr>
            <td>
                @item.kekuleId
            </td>
            <td>
                @item.voornaam
            </td>
            <td>
                @item.tussenvoegsel
            </td>
            <td>
                @item.achternaam
            </td>
            <td>
                @item.geboortePrecisie @item.geboortedatum @if(@item.geboortedatum2 != null) { <span> en @item.geboortedatum2 </span>}
            </td>
            <td>
                @item.trouwdatum
            </td>
            <td>
                @item.overlijdingsdatum
            </td>
        </tr>
    }
 </table>

<button>toevoegen persoon</button>
